    <style name="InformationDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>
    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.ActionButton</item>
    </style>
    <style name="PathButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:button">?android:attr/buttonBarButtonStyle</item>
    </style>
    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.ActionButton">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BottomButton" >
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#cc000000</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_bottom</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BottomButton.Left">
    </style>

    <style name="BottomButton.Right">
        <item name="android:background">@drawable/btn_bottom_last</item>
    </style>

    <style name="BottomButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bottom_button_bar</item>
    </style>
    <!-- TextView style with blue underline. It is most suitable for headers.

         This is similar to ?android:attr/listSeparatorTextView but uses different
         background and text color. See also android:style/Widget.Holo.TextView.ListSeparator
         (which is private, so we cannot specify it as a parent style).  
         See comments for @dimen/list_section_divider_min_height -->
         <!-- Widget.Holo.Light.TextView.ListSeparator -->
    <style name="ContactListSeparatorTextViewStyle" parent="@lewa:style/Widget.Holo.Light.TextView.ListSeparator">        
        <item name="android:minHeight">@dimen/list_section_divider_min_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Theme.FileManagerV5Style" parent="@lewa:style/V5.Theme">
        <item name="lewa:windowActionBarBottomOverlay">true</item>
    </style>
